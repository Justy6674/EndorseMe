# EndorseMe Environment Configuration
# Copy this file to .env.local and fill in your values

# Application
NODE_ENV=development
PORT=5000
APP_URL=http://localhost:5000

# Database (Current - Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Supabase (Target Platform)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
DATABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_PASSWORD=your-database-password

# Authentication (Current - Replit)
REPLIT_CLIENT_ID=your-replit-client-id
REPLIT_CLIENT_SECRET=your-replit-client-secret
SESSION_SECRET=your-session-secret-min-32-chars

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Email Service (SendGrid/Resend)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@endorseme.com.au

# Storage
STORAGE_PROVIDER=supabase
MAX_FILE_SIZE_MB=10

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn
VERCEL_ANALYTICS_ID=your-analytics-id
LOGROCKET_APP_ID=your-logrocket-id

# Feature Flags
ENABLE_AI_PORTFOLIO_REVIEW=false
ENABLE_SUPERVISOR_PORTAL=false
ENABLE_MOBILE_APP_API=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:5173
BCRYPT_ROUNDS=10
JWT_EXPIRES_IN=7d

# External APIs
AHPRA_API_URL=https://api.ahpra.gov.au/v1
AHPRA_API_KEY=your-ahpra-api-key

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your-key
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-secret

# Australian Compliance
DATA_RETENTION_DAYS=2555
PRIVACY_POLICY_VERSION=1.0
TERMS_VERSION=1.0

# Development
VITE_DEV_SERVER_PORT=5173
HMR_HOST=localhost
HMR_PORT=5173

# Testing
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/endorseme_test
CI=false

# Deployment
VERCEL_URL=
VERCEL_ENV=development
VERCEL_GIT_COMMIT_SHA=
VERCEL_GIT_COMMIT_MESSAGE=